<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/dosis"
                android:gravity="bottom|center_horizontal"
                android:text="TRAINHOPPER"
                android:textColor="#616161"
                android:textSize="46sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="@font/dosis3"
                android:gravity="top|center_horizontal"
                android:paddingTop="4dp"
                android:text="Route Combinations to your destination"
                android:textColor="#757575"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border_transparent"
                        android:elevation="2dp"
                        android:ems="10"
                        android:gravity="bottom|center_horizontal"
                        android:hint="Source"
                        android:inputType="textPostalAddress"
                        android:padding="16dp"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <AutoCompleteTextView
                        android:id="@+id/destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border_transparent"
                        android:elevation="2dp"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Destination"
                        android:inputType="textPostalAddress"
                        android:padding="16dp"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textSize="14sp" />
                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignRight="@+id/lin1"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_swap_vert_white_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin1"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/ic_today_black_18dp" />

                    <Button
                        android:id="@+id/date"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginRight="12dp"
                        android:layout_weight="0"
                        android:gravity="left|center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="0dp"
                        android:text="August 16, 2016"
                        android:textColor="@color/primary" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/ic_access_time_black_18dp" />

                    <Button
                        android:id="@+id/timeA"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="0"
                        android:gravity="left|center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="0dp"
                        android:text="09:45 AM"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:orientation="vertical">

                <Button
                    android:id="@+id/search"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:text="Proceed" />

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0"
                    android:text="Advanced Options"
                    android:textColor="@color/primary_dark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a0f5f5f5"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="Searching"
            android:textColor="#424242"
            android:textSize="20sp" />
    </RelativeLayout>

    <include layout="@layout/advanced_options" />

</android.support.v4.widget.DrawerLayout>
