<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_margin="5dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/station_1"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/station_2"
        android:textSize="17sp" />

    <ImageView
        android:contentDescription="@string/to"
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/textView14"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@mipmap/ic_arrow_forward_black_48dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/train_name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/train_no"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Station 1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_marginLeft="30dp"
        android:layout_toStartOf="@+id/textView14"
        android:gravity="center"
        android:padding="5dp"
        android:text="Arrival"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView15"
        android:layout_marginRight="30dp"
        android:layout_toEndOf="@+id/textView14"
        android:gravity="center"
        android:padding="5dp"
        android:text="Departure"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Station 2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/arrival"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView23"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView18"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/departure"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#eeeeee"
        android:text="@string/leg_no_1"
        android:layout_margin="10dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@+id/textView14"
        android:gravity="center_vertical|right"
        android:paddingRight="30dp"
        android:text="@string/arrival"
        android:textColor="#d50000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView17"
        android:layout_alignEnd="@+id/textView12"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/textView14"
        android:gravity="left|center_vertical"
        android:paddingLeft="25dp"
        android:text="@string/departure"
        android:textColor="#64dd17"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/classes_available"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:layout_below="@+id/textView44"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="#c5e1a5"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="#c5e1a5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration - 00:00 Hrs"
        android:id="@+id/textView44"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="5dp"
        android:background="#c5e1a5"
        android:textSize="20sp" />
</RelativeLayout>