<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:longClickable="false"
    android:orientation="vertical"
    android:translationZ="10dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="3dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Station 1"
                android:textSize="17sp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Station 2"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_arrow_forward_black_48dp"
                android:layout_below="@+id/textView10"
                android:layout_alignEnd="@+id/textView14"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="Train Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Train No."
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Station 1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/textView15"
                android:gravity="center"
                android:textSize="13sp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/imageView3"
                android:layout_alignEnd="@+id/textView21" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/textView15"
                android:layout_toEndOf="@+id/textView15"
                android:gravity="center"
                android:textSize="13sp"
                android:padding="5dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Station 2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_below="@+id/textView18"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13sp"
                android:layout_below="@+id/textView18"
                android:gravity="center"
                android:padding="5dp"
                android:layout_alignEnd="@+id/textView17"
                android:layout_alignStart="@+id/textView17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop No. 1"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:background="#eeeeee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival"
                android:id="@+id/textView21"
                android:textColor="#d50000"
                android:textSize="14sp"
                android:layout_above="@+id/textView16"
                android:layout_marginBottom="25dp"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|right"
                android:layout_toStartOf="@+id/textView15"
                android:paddingRight="15dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:id="@+id/textView23"
                android:textSize="14sp"
                android:textColor="#64dd17"
                android:layout_above="@+id/textView17"
                android:layout_marginBottom="25dp"
                android:layout_alignEnd="@+id/textView12"
                android:gravity="left|center_vertical"
                android:layout_toEndOf="@+id/textView14"
                android:layout_alignStart="@+id/textView17"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView27"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:ellipsize="marquee"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView26"
                android:layout_below="@+id/textView11"
                android:layout_alignBottom="@+id/textView27"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView11"
                android:gravity="center"
                android:ellipsize="marquee"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Classes Available"
                android:id="@+id/textView28"
                android:layout_below="@+id/textView18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView29"
                android:layout_below="@+id/textView28"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="false"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>