<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff">

        <RelativeLayout
            android:id="@+id/layout13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:background="#ffffff"
            android:elevation="3dp">

            TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Enter Source and Destination"
            android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/source"
                android:layout_alignEnd="@+id/source"
                android:layout_alignStart="@+id/source"
                android:layout_alignTop="@+id/textView42"
                android:gravity="center"
                android:text="@string/source"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/destination"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignEnd="@+id/destination"
                android:layout_alignStart="@+id/destination" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/date"
                android:layout_alignStart="@+id/date"
                android:layout_alignTop="@+id/date"
                android:gravity="center"
                android:text="@string/date"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/source"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_alignBottom="@+id/destination"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView42"
                android:layout_toStartOf="@+id/imageButton"
                android:background="#00ffffff"
                android:enabled="true"
                android:gravity="center"
                android:hint="Source"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="City 1"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/destination"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/textView42"
                android:layout_toEndOf="@+id/imageButton"
                android:background="#00ffffff"
                android:enabled="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="City 2"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/date"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destination"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="#00ffffff"
                android:textAllCaps="true"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:maxLines="2"
                android:minLines="2"
                android:text="_ _ _ _ , _ _"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp" />


            <ImageButton
                android:contentDescription="@string/exchange"
                android:id="@+id/imageButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/source"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"
                android:background="@mipmap/ic_swap_horiz_black_48dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#eeeeee"
                android:text="@string/enter_source_amp_destination"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/layout13"
            android:layout_alignStart="@+id/layout13"
            android:layout_below="@+id/layout13"
            android:background="#ffffff"
            android:elevation="3dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#eeeeee"
                android:text="@string/settings"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/classes"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView40"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:text="@string/class_preference" />

            <Button
                android:id="@+id/timeA"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classes"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:text="@string/time_preference"
                android:layout_alignStart="@+id/classes"
                android:layout_alignEnd="@+id/classes" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeA"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:checked="false"
                android:text="@string/show_only_direct_trains" />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:src="@mipmap/ic_search_white_48dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/loading"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:contentDescription="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_marginLeft="10dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/citySelector"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/citySelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_city_name_or_code"
            android:inputType="textNoSuggestions|textCapCharacters"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />

        <ListView
            android:id="@+id/cityList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/citySelector"
            android:layout_marginTop="10dp">

        </ListView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Match \n\r\n\rEnter a valid Station Name or code"
            android:id="@+id/error"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:visibility="gone"
            android:minLines="2"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>
